# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database - PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=impact_analysis
DB_USER=postgres
DB_PASSWORD=your-secure-postgres-password

# Database - MongoDB
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USER=admin
MONGO_PASSWORD=your-secure-mongo-password
MONGODB_URI=mongodb://admin:your-secure-mongo-password@mongodb:27017/

# Database - Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Vector Database (Choose one)
# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=code-embeddings

# ChromaDB (local)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Security
JWT_SECRET=your-very-secure-jwt-secret-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Gateway
API_GATEWAY_PORT=3000
RATE_LIMIT_PER_MINUTE=100

# Service Ports
REPOSITORY_SCANNER_PORT=8001
IMPACT_ANALYZER_PORT=8002
AI_ORCHESTRATOR_PORT=8003
TEST_GENERATOR_PORT=8004

# Service URLs (for inter-service communication)
REPOSITORY_SCANNER_URL=http://repository-scanner:8001
IMPACT_ANALYZER_URL=http://impact-analyzer:8002
AI_ORCHESTRATOR_URL=http://ai-orchestrator:8003
TEST_GENERATOR_URL=http://test-generator:8004

# Git Configuration
GIT_CLONE_TIMEOUT=300
GIT_CLONE_PATH=/tmp/repos

# RAG Configuration
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.2
MAX_TOKENS=4096
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=10

# Analysis Configuration
MAX_GRAPH_NODES=10000
CRITICALITY_THRESHOLD=0.7
ANALYSIS_TIMEOUT=300

# Frontend
REACT_APP_API_URL=http://localhost:3000/api/v1
REACT_APP_WS_URL=ws://localhost:3000/ws

# Monitoring (optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Feature Flags
ENABLE_CACHE=true
ENABLE_PARALLEL_ANALYSIS=true
ENABLE_METRICS=true
